{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
    /* "plugin:prettier/recommended" */
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": { "react-in-jsx-scope": "off", "no-unused-vars": "warn" },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
